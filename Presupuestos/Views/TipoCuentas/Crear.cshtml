@model TipoCuenta
@{ 
    ViewData["Title"] = "Crear Tipo Cuenta";
}

<h1>Creat Tipo de Cuenta</h1>
<h5>El tipo de cuenta se refiere a cómo podemos agrupar cuentas.
    ejemplos: préstamos, tarjeta de crédito,etc</h5>
<div asp-validation-summary="All" class="text-danger"></div>

<form asp-controller="TipoCuentas" asp-action="Crear">
    <div class="mb-3">
        <label for="Nombre" class="col-form-label">Nombre</label>
        <input type="text" asp-for="Nombre" id="nombre" name="Nombre" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>

@section Scripts
{
 <partial name="_ValidationScriptsPartial" />
}